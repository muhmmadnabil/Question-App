<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".First">

    <Button
        android:id="@+id/btn_questions"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="@dimen/btn_main_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:background="@drawable/btn_states"
        android:inputType="text"
        android:text="@string/btn_questions"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_main_text"
        tools:ignore="TextViewEdits" />

    <Button
        android:id="@+id/btn_rate"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="@dimen/btn_main_height"
        android:layout_below="@id/btn_questions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_states"
        android:inputType="text"
        android:text="@string/btn_rate"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_main_text"
        tools:ignore="TextViewEdits" />
</RelativeLayout>